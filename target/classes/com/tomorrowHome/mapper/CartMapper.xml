	<!-- 카트 추가 -->
	<insert id="addCart">
	
		insert into shopping_cart(member_id, goods_id, cart_goods_qty)
		values(#{memberId}, #{goodsId}, #{cartGoodsQty}) 
	
	</insert>
	
	
	<!-- 카트 삭제 -->
	<delete id="deleteCart">
	
		delete from shopping_cart where cart_id = #{cartId}
	
	</delete>
	
	<!-- 카트 수량 수정 -->
	<update id="modifyCount">
	
		update shopping_cart set cart_goods_qty=#{cartGoodsQty} where cart_id = #{cartId}
	
	</update>
	
	
